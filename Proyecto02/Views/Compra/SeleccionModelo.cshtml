@model Proyecto02.Models.Equipo

@{
    ViewData["Title"] = "Adquisición de equipos";
    List<string> modelos = (List<string>)ViewData["Modelos"];
}

<h1>@ViewData["Paso"]</h1>

<h3>Tipo equipo: @Model.Modelo.Tipo.Nombre()</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="WorkflowCompra" method="post">
            <input type="hidden" name="paso" value="2" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Seleccionar modelo:</label>
                <select asp-for="Modelo.Nombre" class="form-control">
                    @foreach (var modelo in modelos)
                    {
                        <option default value="@modelo">@modelo</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Precio:</label>
                <input asp-for ="Precio" class="form-control" type="number" min="1" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="col-lg-1 btn-group p-2">
                <button class="btn btn-primary">Siguiente</button> &nbsp;
                <a asp-controller="Compra" asp-action="Index">
                    <button type="button" class="btn btn-secondary">Cancelar</button>
                </a>
            </div>
            <input asp-for="Modelo.Tipo" type="hidden"/>
        </form>
    </div>
</div>
