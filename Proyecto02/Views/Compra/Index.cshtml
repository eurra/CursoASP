@model Proyecto02.Models.IMantenedorCompras

@{
    ViewData["Title"] = "Adquisición de equipos";
    var compras = Model.ObtenerCompras();
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Tipo equipo</th>
            <th>Nombre modelo</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var compra in compras)
        {
            <tr>
                <td>@compra.Modelo.Tipo</td>
                <td>@compra.Modelo.Nombre</td>
                <td>
                    @string.Format("{0:C}", compra.Precio)
                </td>
                <td>
                    <a asp-action="Eliminar" asp-route-id="@compra.Id">Quitar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="WorkflowCompra" method="post">
    <button class="btn btn-primary">Nueva compra</button>
    <input type="hidden" name="paso" value="0"/>
</form>

