@model Proyecto03.Models.VentaServicio

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>VentaServicio</h4>
    <hr />
    <dl class="row">        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Servicio.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoVentaServicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoVentaServicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalVenta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalVenta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPagado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPagado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.RUT)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Representantes):
        </dt>
        <dd>
            <ul>
            @foreach (var repr in Model.Cliente.Representantes)
            {
                var text = repr.Nombre + " - " + repr.Correo + " - " + repr.Telefono;
                <li>@Html.DisplayFor(model => text)</li>
            }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VentaServicioID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
