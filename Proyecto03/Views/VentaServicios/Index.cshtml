@model IEnumerable<Proyecto03.Models.VentaServicio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">[Create New]</a>
    <a asp-action="GenerarReporte">[Generar reporte]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio.CategoriaServicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.EstadoVentaServicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPagado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.RUT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.CategoriaServicio.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.Descripcion)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.EstadoVentaServicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPagado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VentaServicioID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VentaServicioID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VentaServicioID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
